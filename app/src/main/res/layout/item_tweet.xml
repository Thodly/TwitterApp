<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="5dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_light"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_launcher" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivMediaPhoto"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_above="@+id/ivRetweet"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:maxLines="3"
        android:text="A bestfriend is the one that will allways stay by your side whatever happen to you in life"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvUserName"
        android:layout_alignParentEnd="true"
        android:text="5h" />


    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/like_action"
        android:layout_marginEnd="14dp"
        android:layout_below="@+id/tvBody"
        android:layout_toStartOf="@+id/tvDate" />

    <ImageView
        android:id="@+id/ivRetweet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/retweet_action"
        android:layout_marginEnd="29dp"
        android:layout_alignTop="@+id/ivFavorite"
        android:layout_toStartOf="@+id/ivFavorite" />

    <ImageView
        android:id="@+id/ivReply"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/reply_action"
        android:layout_marginEnd="49dp"
        android:layout_alignTop="@+id/ivRetweet"
        android:layout_alignEnd="@+id/ivRetweet" />

</RelativeLayout>